{% extends 'base.html.twig' %}

{% block title %}Liste des étudiants{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajouter un étudiant</h1>
    <!-- ajouter un étudiant en BDD -->
    {{ form(formAddEtudiant) }}

    <!-- retour à la page admin -->
    <a href="{{ path('app_admin') }}">Retour</a>

    <h1>Liste des étudiants</h1>
    classés par nom
    <!-- tableau des étudians, édition, suppression -->
    <table>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>email</th>
            <th>N° téléphone</th>
        </tr>
        
    {% for etudiant in etudiants %}
        <tr><td>{{ etudiant.prenomEtudiant }} </td><td> {{ etudiant.nomEtudiant }} </td><td>
        {{ etudiant.emailEtudiant }} </td><td> {{ etudiant.phoneEtudiant }} </td><td>
        <a href="{{ path('edit_etudiant',{'id':etudiant.id}) }}">Editer</a> </td><td>
        <a href="{{ path('delete_etudiant',{'id':etudiant.id}) }}">Supprimer</a> </td</tr>
    {% endfor %}
        
    </table>
</div>
{% endblock %}
