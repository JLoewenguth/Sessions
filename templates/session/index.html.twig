{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajouter un étudiant</h1>
    <!-- ajouter un étudiant en BDD -->
    {{ form(formAddSession) }}

    <h1>Liste des étudiants</h1>
    <!-- tableau des étudians, édition, suppression -->
    <table>
        <tr>
            <th>Nom</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Places</th>
        </tr>
        
    {% for session in sessions %}
        <tr><td>{{ session.nomSession }} </td><td> {{ session.dateDebut }} </td><td>
        {{ session.dateFin }} </td><td> {{ session.nbrPlace }} </td><td>
        <a href="{{ path('edit_session',{'id':session.id}) }}">Editer</a> </td><td>
        <a href="{{ path('delete_session',{'id':session.id}) }}">Supprimer</a> </td</tr>
    {% endfor %}
        
    </table>
</div>

{% endblock %}
