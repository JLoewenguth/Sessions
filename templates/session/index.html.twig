{% extends 'base.html.twig' %}

{% block title %}Liste des sessions{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajouter une session</h1>
    <!-- ajouter une session en BDD -->
    {{ form(formAddSession) }}
    
    <!-- retour à la page admin -->
    <a href="{{ path('app_admin') }}">Retour</a>

    <h1>Liste des sessions</h1>
    classés par date
    <!-- tableau des session, édition, suppression -->
    <table>
        <tr>
            <th>Nom</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Places</th>
        </tr>
        
    {% for session in sessions %}
        <tr><td>{{ session.nomSession }} </td><td> {{ session.dateDebut | date('d-m-Y') }} </td><td>
        {{ session.dateFin | date('d-m-Y') }} </td><td> {{ session.nbrPlace }} </td><td>
        <a href="{{ path('edit_session',{'id':session.id}) }}">Editer</a> </td><td>
        <a href="{{ path('delete_session',{'id':session.id}) }}">Supprimer</a> </td</tr>
    {% endfor %}
        
    </table>
</div>

{% endblock %}
