{% extends 'base.html.twig' %}

{% block title %}Hello FormateurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajouter un formateur</h1>
    <!-- ajouter un formateur en BDD -->
    {{ form(formAddFormateur) }}

    <h1>Liste des formateurs</h1>
    <!-- tableau des formateurs, édition, suppression -->
    <table>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>email</th>
        </tr>
        
    {% for formateur in formateurs %}
        <tr><td>{{ formateur.prenomFormateur }} </td><td> {{ formateur.nomFormateur }} </td><td>
        {{ formateur.emailFormateur }} </td><td>
        <a href="{{ path('edit_formateur',{'id':formateur.id}) }}">Editer</a> </td><td>
        <a href="{{ path('delete_formateur',{'id':formateur.id}) }}">Supprimer</a> </td</tr>
    {% endfor %}
        
    </table>
</div>

{% endblock %}
